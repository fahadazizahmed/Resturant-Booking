<form class="form-signin" action="/reset" method="POST">
  <h2 class="form-signin-heading">Reset Password email</h2>

  <label for="forgetPassword" class="sr-only">Email</label>
  <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required autofocus>

  <br/>
  
  <button class="btn btn-lg btn-default btn-block" type="submit">Reset</button>
</form>

